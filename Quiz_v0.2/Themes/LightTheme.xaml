<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Світла тема -->
    <SolidColorBrush x:Key="Background" Color="#D9F99D"/>
    <SolidColorBrush x:Key="ButtonBackground" Color="LightGray"/>
    <SolidColorBrush x:Key="ButtonForeground" Color="#000000"/>
    <SolidColorBrush x:Key="TextColor" Color="#000000"/>
    <SolidColorBrush x:Key="LinkColor" Color="#4682B4"/>
    <SolidColorBrush x:Key="ComboBoxBackground" Color="#E6E6FA"/>
    <SolidColorBrush x:Key="ComboBoxForeground" Color="#000000"/>

    <SolidColorBrush x:Key="TopicButtonBackground" Color="#ADD8E6"/>
    <!-- Світло-блакитний для кнопок теми -->
    <SolidColorBrush x:Key="QuestionButtonBackground" Color="#D3D3D3"/>
    <!-- Світло-сірий для кнопок питань -->

    <SolidColorBrush x:Key="TimerTextColor" Color="Red"/>
    <!-- Червоний колір для таймера -->
    <SolidColorBrush x:Key="QuestionTextColor" Color="Black"/>
    <!-- Чорний колір для тексту питання -->
</ResourceDictionary>
